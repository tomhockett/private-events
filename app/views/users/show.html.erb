<h3>Created Events:</h3>
<div>
  <% @events.each do |event| %>
   <%= link_to event.title, event_path(event), style: "display: block" %>
  <% end %>
</div>

<h3>Attended Events:</h3>
<div>
  <% if @attended_events.any? %>
    <% @attended_events.each do |attn| %>
      <%= link_to attn.title, event_path(attn), style: "display: block" %>
    <% end %>
  <% else %>
    This user has no life.
  <% end %>
</div>
